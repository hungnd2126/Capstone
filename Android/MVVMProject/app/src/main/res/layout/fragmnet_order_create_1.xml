<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tạo đơn hàng"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hãy cho chúng tôi biết về sản phẩm bạn cần."
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hình ảnh sản phẩm"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Tải ảnh lên"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên sản phẩm"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtItemName"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="nhập tên sản phẩm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên sản phẩm"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtItemDesc"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="mô tả về sản phẩm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên sản phẩm"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtItemPrice"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="nhập giá sản phẩm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="số lượng"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtItemQuantity"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_gravity="top"
                    android:ems="10"
                    android:hint="1" />

            </LinearLayout>


            <Button
                android:id="@+id/btnNext"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Kế tiếp"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>