<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btnAddCard"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAddCard"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:text="Thêm thẻ tín dụng"
                    android:textColor="#000000"
                    android:textSize="35dp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteY="2dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_action_name_back" />

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Số thẻ"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtCardNumber"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nhập vào số thẻ" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Hạn sử dụng"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp" />

            <!--Cho nay xai Spinner, dung button tam thoi de biet-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:text="Tháng" />

                <Button
                    android:id="@+id/btnYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="60dp"
                    android:text="Năm" />
            </RelativeLayout>
            <!---->

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Tên chủ thẻ"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtCardName"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nhập vào tên chủ thẻ" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="CVC"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtCVC"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nhập mã an ninh" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Quốc gia"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtCountry"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nhập vào quốc gia của bạn" />

            <Button
                android:id="@+id/btnSaveCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:text="Lưu"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnCancelCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:text="Hủy"
                android:textSize="20dp" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>