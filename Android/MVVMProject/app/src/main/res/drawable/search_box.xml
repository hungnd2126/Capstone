<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:textColor="@color/white"
            >
            <solid android:color="@color/color_tab_2"/>

            <stroke android:width="1dp"
                android:color="#00886A"
                />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />

            <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
        </shape>

    </item>
    <item android:state_focused="true"
        >
        <shape>
            <solid android:color="@color/color_tab_2"/>

            <stroke android:width="1dp"
                android:color="#00886A"
                />

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />

            <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
        </shape>
    </item>
    <item>
        <shape
            android:textColor="@color/color_tab_2">
            <solid android:color="#FFFFFF"/>

            <stroke android:width="1dp"
                android:color="#00886A"
                />

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />

            <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
        </shape>
    </item>
</selector>